@prefix : <http://example.com/books/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix unit: <http://qudt.org/vocab/unit#> .

:WorkShape
    a sh:NodeShape ;
    sh:description "Super shape for all things that are a Work"@en ;
    sh:targetClass :Work ;
    sh:property :TitleShape, :ReleaseShape .

:TitleShape
    a sh:PropertyShape ;
    sh:path :title ;
    sh:datatype rdf:langString ;
    sh:uniqueLang true ;
    sh:minCount 1 .

:ReleaseShape
    a sh:PropertyShape ;
    sh:path :release ;
    sh:or (
              [ sh:datatype xsd:year ; ]
              [ sh:datatype xsd:date ; ]
          ) ;
    sh:maxCount 1 .

## BOOK

:BookShape
    a sh:NodeShape ;
    sh:description "Shape for all instances of Book"@en ;
    sh:targetClass :Book ;
    sh:node :WorkShape ;
    sh:property :PageShape, :AuthorShape .

:PageShape
    a sh:PropertyShape ;
    sh:path :pages ;
    sh:datatype xsd:integer ;
    sh:minCount 1 ;
    sh:maxCount 1 .

:AuthorShape
    a sh:PropertyShape ;
    sh:path :author ;
    sh:class :Author ;
    sh:minCount 1 .

## PERSONS

:PersonShape
    a sh:NodeShape ;
    sh:description "Super shape for all things that are Persons"@en ;
    sh:targetClass :Person ;
    sh:property :NameShape, :BornShape, :DiedShape .

:AuthorNodeShape
    a sh:NodeShape ;
    sh:targetClass :Author ;
    sh:node :PersonShape .

:DirectorNodeShape
    a sh:NodeShape ;
    sh:targetClass :Director ;
    sh:node :PersonShape .

:PoetShape
    a sh:NodeShape ;
    sh:targetClass :Poet ;
    sh:node :PersonShape .

:ComposerShpae
    a sh:NodeShape ;
    sh:targetClass :Composer ;
    sh:node :PersonShape .

:NameShape
    a sh:PropertyShape ;
    sh:path :name ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 .

:BornShape
    a sh:PropertyShape ;
    sh:path :born ;
    sh:or (
              [ sh:datatype xsd:year ; ]
              [ sh:datatype xsd:date ; ]
          ) ;
    # sh:lessThanOrEquals :died ; # property pair constraints are not supported in the RDF4J SHACL Engine, but they are supported in the SHACL Playground.
    sh:minCount 1 ;
    sh:maxCount 1 .

:DiedShape
    a sh:PropertyShape ;
    sh:path :died ;
    sh:or (
              [ sh:datatype xsd:year ; ]
              [ sh:datatype xsd:date ; ]
          ) ;
    sh:maxCount 1 .

## POEM COLLECTION

:PoemCollectionShape
    a sh:NodeShape ;
    sh:targetClass :PoemCollection ;
    sh:node :WorkShape ;
    sh:property :CompiledByShape .

:CompiledByShape
    a sh:PropertyShape ;
    sh:path :compiledBy ;
    sh:class :Poet ;
    sh:minCount 1 .

## OPERA

:OperaShape
    a sh:NodeShape ;
    sh:targetClass :Opera ;
    sh:node :WorkShape ;
    sh:property :RunningTimeShape .

:RunningTimeShape
    a sh:PropertyShape ;
    sh:path :runningTime ;
    sh:datatype unit:MIN ;
    sh:minCount 1 ;
    sh:maxCount 1 .

## TEXT ADVENTURE GAME

:TextAdventureGame
    a sh:NodeShape ;
    sh:targetClass :TextAdventureGame ;
    sh:node :WorkShape ;
    sh:property :ReleasedOnShape, :DevelopedByShape .

:ReleasedOnShape
    a sh:PropertyShape ;
    sh:path :releasedOn ;
    sh:class :HomeComputer .

:DevelopedByShape
    a sh:PropertyShape ;
    sh:path :developedBy ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 .

## ALBUM

:AlbumShape
    a sh:NodeShape ;
    sh:targetClass :Album ;
    sh:node :WorkShape ;
    sh:property :RunningTimeShape, :AlbumByShape .

:AlbumByShape
    a sh:PropertyShape ;
    sh:path :albumBy ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 .

## MOVIE

:MovieShape
    a sh:NodeShape ;
    sh:targetClass :Movie ;
    sh:node :WorkShape ;
    sh:property :RunningTimeShape, :DirectorShape .

:DirectorShape
    a sh:PropertyShape ;
    sh:path :director ;
    sh:class :Director ;
    sh:minCount 1 .
